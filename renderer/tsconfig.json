{
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["./*"],
      "@components/*": ["./components/*"],
      "@views/*": ["./views/*"],
      "@context/*": ["./context/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@theme/*": ["./theme/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "references": [{ "path": "../shared/tsconfig.json" }]
}
