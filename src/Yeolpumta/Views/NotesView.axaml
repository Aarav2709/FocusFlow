<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.Markdown"
             x:Class="Yeolpumta.Views.NotesView">
  <Grid ColumnDefinitions="300, *" RowDefinitions="Auto, *" ColumnSpacing="12" RowSpacing="8">
    <TextBlock Grid.ColumnSpan="2" Text="Notes" FontSize="18" FontWeight="SemiBold"/>

    <!-- List -->
    <StackPanel Grid.Row="1" Spacing="6">
      <StackPanel Orientation="Horizontal" Spacing="6">
        <Button Content="New" Command="{Binding NewCommand}"/>
        <Button Content="Save" Command="{Binding SaveCommand}"/>
        <Button Content="Delete" Command="{Binding DeleteCommand}"/>
      </StackPanel>
      <ListBox Items="{Binding Notes}" SelectedItem="{Binding SelectedNote}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel>
              <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
              <TextBlock Text="{Binding Category}" Opacity="0.6"/>
            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </StackPanel>

    <!-- Editor -->
    <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="Auto, Auto, *" RowSpacing="8">
      <TextBox Watermark="Title" Text="{Binding EditTitle}"/>
      <TextBox Watermark="Category" Text="{Binding EditCategory}"/>
      <Grid ColumnDefinitions="*, *" ColumnSpacing="8">
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding EditContent}"/>
        <ScrollViewer>
          <md:MarkdownScrollViewer Markdown="{Binding EditContent}" />
        </ScrollViewer>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
