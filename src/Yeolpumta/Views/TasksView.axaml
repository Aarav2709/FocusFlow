<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Yeolpumta.Views.TasksView">
  <Grid RowDefinitions="Auto, *" RowSpacing="8" ColumnDefinitions="*, 320" ColumnSpacing="12">
    <TextBlock Grid.ColumnSpan="2" Text="Tasks" FontSize="18" FontWeight="SemiBold"/>
  <ListBox Grid.Row="1" ItemsSource="{Binding Tasks}" SelectedItem="{Binding Selected}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Spacing="8">
            <CheckBox IsChecked="{Binding IsCompleted}" IsEnabled="False"/>
            <TextBlock Text="{Binding Title}"/>
            <TextBlock Text="{Binding DueDate}" Opacity="0.6"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <StackPanel Grid.Column="1" Grid.Row="1" Spacing="6">
      <TextBox Watermark="Title" Text="{Binding EditTitle}"/>
      <TextBox Watermark="Description" Text="{Binding EditDescription}" AcceptsReturn="True" Height="120"/>
      <DatePicker SelectedDate="{Binding EditDue}"/>
      <ComboBox SelectedItem="{Binding EditPriority}">
        <ComboBoxItem Content="Low" Tag="Low"/>
        <ComboBoxItem Content="Medium" Tag="Medium"/>
        <ComboBoxItem Content="High" Tag="High"/>
      </ComboBox>
      <CheckBox Content="Completed" IsChecked="{Binding EditCompleted}"/>
      <StackPanel Orientation="Horizontal" Spacing="6">
        <Button Content="New" Command="{Binding NewCommand}"/>
        <Button Content="Save" Command="{Binding SaveCommand}"/>
        <Button Content="Delete" Command="{Binding DeleteCommand}"/>
        <Button Content="Toggle" Command="{Binding ToggleCompleteCommand}"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
