<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Yeolpumta.Views.ProgressView">
  <StackPanel Spacing="8">
    <TextBlock Text="Progress" FontSize="18" FontWeight="SemiBold"/>
    <TextBlock Text="This week"/>
    <TextBlock Text="{Binding TotalMinutesWeek}" FontSize="36"/>
    <TextBlock Text="Recent Sessions" FontWeight="SemiBold"/>
    <ListBox Items="{Binding Recent}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="{Binding StartTime}"/>
            <TextBlock Text="-"/>
            <TextBlock Text="{Binding DurationMinutes}"/>
            <TextBlock Text="min"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
