{
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "../dist/main",
    "rootDir": ".",
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "references": [{ "path": "../shared/tsconfig.json" }]
}
