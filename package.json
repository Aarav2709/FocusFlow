{
  "name": "focusflow-desktop",
  "version": "1.0.0",
  "description": "Desktop version of the FocusFlow study companion built with Electron, React, and Material-UI.",
  "author": "Aarav2709",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:watch:ts\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p main/tsconfig.json --watch --preserveWatchOutput",
    "dev:electron": "cross-env ELECTRON_IS_DEV=1 wait-on dist/main/index.js dist/main/preload.js tcp:5173 && cross-env ELECTRON_IS_DEV=1 electron .",
    "build": "npm run build:ts && npm run build:renderer && node ./scripts/ensure-native.js && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p main/tsconfig.json",
    "build:ts": "tsc -b",
    "watch:ts": "tsc -b -w",
    "rebuild:native": "node ./scripts/ensure-native.js",
    "lint": "eslint \"**/*.{ts,tsx,cjs}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "package": "npm run build && electron-builder",
    "preview": "vite preview --host"
  },
  "dependencies": {
    "@emotion/react": "^11.13.1",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.3",
    "@mui/lab": "^6.0.0-beta.19",
    "@mui/material": "^6.1.3",
    "@tanstack/react-query": "^5.56.2",
    "better-sqlite3": "^11.3.0",
    "date-fns": "^3.6.0",
    "electron-store": "^10.0.0",
    "module-alias": "^2.2.2",
    "notistack": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
  "@types/module-alias": "^2.0.2",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.2.0",
    "electron-builder": "^25.0.5",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.7",
    "wait-on": "^7.2.0"
  },
  "_moduleAliases": {
    "@shared": "dist/shared"
  },
  "postinstall": "node ./scripts/ensure-native.js || true",
  "build": {
  "appId": "com.focusflow.desktop",
  "productName": "FocusFlow",
  "artifactName": "FocusFlow.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
  "icon": "assets/focusflow.png",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "dist/shared/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    },
    "mac": {
      "category": "public.app-category.education",
  "icon": "assets/focusflow.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
  "artifactName": "FocusFlow.${ext}",
  "icon": "assets/focusflow.ico",
  "executableName": "FocusFlow"
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ],
      "category": "Education",
  "icon": "assets/focusflow.png"
    }
  }
}
