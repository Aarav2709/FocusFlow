{
  "name": "yeolpumta-pc",
  "version": "0.1.0",
  "description": "Cross-platform desktop study app for Yeolpumta built with Electron, React, and TypeScript.",
  "author": "Aarav2709",
  "license": "MIT",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p electron/tsconfig.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on dist-electron/main.js tcp:5173 && electron .",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "lint": "tsc --noEmit",
    "package": "npm run build && electron-builder",
    "preview": "vite preview --host"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "better-sqlite3": "^9.0.0",
    "electron-store": "^10.0.0",
    "framer-motion": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yeolpumta.desktop",
    "productName": "Yeolpumta",
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.education"
    },
    "win": {
      "target": ["nsis"],
      "publisherName": "Yeolpumta"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Education"
    }
  }
}
